<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        android:src="@drawable/starting" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_banner">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="250dp"
            android:id="@+id/imageview_starting_logo"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/logo"
            android:layout_marginTop="@dimen/regular_margin_750" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_starting_login_button"
            style="@style/WhiteText.Bold.125"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_button_starting"
            android:text="Login"
            android:layout_marginTop="@dimen/regular_margin_550"
            android:layout_marginBottom="@dimen/regular_margin"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/imageview_starting_logo"
            app:layout_constraintEnd_toEndOf="@id/imageview_starting_logo"
            app:layout_constraintStart_toStartOf="@id/imageview_starting_logo"
             />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_starting_register_button"
            style="@style/WhiteText.Bold.125"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_register_button_starting"
            android:text="Register"
            android:layout_marginTop="@dimen/regular_margin_150"
            android:layout_marginBottom="@dimen/regular_margin"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/button_starting_login_button"
            app:layout_constraintEnd_toEndOf="@id/button_starting_login_button"
            app:layout_constraintStart_toStartOf="@id/button_starting_login_button"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>