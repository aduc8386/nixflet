<resources>
    <!-- Base application theme. -->
    <style name="Theme.Nixflet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white_60</item>
        <item name="colorControlActivated">@color/white_60</item>
        <item name="colorControlHighlight">@color/white_60</item>
    </style>

    <style name="LoadingDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="WhiteText.Normal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WhiteText.Normal.125" parent="WhiteText.Normal">
        <item name="android:textSize">@dimen/regular_font_size_125</item>
    </style>

    <style name="WhiteText.Normal.150" parent="WhiteText.Normal">
        <item name="android:textSize">@dimen/regular_font_size_150</item>
    </style>

    <style name="WhiteText.Normal.75" parent="WhiteText.Normal">
        <item name="android:textSize">@dimen/regular_font_size_75</item>
    </style>

    <style name="WhiteText.Bold" parent="WhiteText.Normal">
        <item name="android:textSize">@dimen/regular_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WhiteText.Bold.75" parent="WhiteText.Bold">
        <item name="android:textSize">@dimen/regular_font_size_75</item>
    </style>

    <style name="WhiteText.Bold.125" parent="WhiteText.Bold">
        <item name="android:textSize">@dimen/regular_font_size_125</item>
    </style>

    <style name="WhiteText.Bold.150" parent="WhiteText.Bold">
        <item name="android:textSize">@dimen/regular_font_size_150</item>
    </style>

    <style name="WhiteText.Bold.175" parent="WhiteText.Bold">
        <item name="android:textSize">@dimen/regular_font_size_175</item>
    </style>

    <style name="WhiteText.Italic" parent="WhiteText.Normal">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="WhiteText.Italic.75" parent="WhiteText.Italic">
        <item name="android:textSize">@dimen/regular_font_size_75</item>
    </style>

    <style name="WhiteOpacity.Italic.75" parent="WhiteText.Normal">
        <item name="android:textSize">@dimen/regular_font_size_75</item>
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>